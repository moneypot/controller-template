{
  "name": "controller-template",
  "type": "module",
  "scripts": {
    "start": "node --experimental-transform-types src/index.ts",
    "dev": "DOTENV_CONFIG_PATH=.env.development LOG_PRETTY=true tsx watch src/index.ts",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:reset": "DOTENV_CONFIG_PATH=.env.development tsx -r dotenv/config scripts/reset-db.ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "dependencies": {
    "@moneypot/hub": "^1.19.12",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "pg": "^8.16.3",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "^6.1.0",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "graphql-request": "^7.4.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "protobufjs"
    ]
  }
}
